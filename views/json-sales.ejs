<%- include('parts/html-head') %>
<%- include('parts/navbar') %>


<div class="container">
    <div class="row">
        <div class="col-6">
            <form>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">欄位</label>
                  <select class="form-select" id="orderByCol" name="orderByCol">
                    <option value="name">name</option>
                    <option value="age">age</option>
                    <option value="ID">ID</option>
                  </select>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">規則</label>
                  <select class="form-select" id="orderByRule" name="orderByRule">
                    <option value="asc">升冪排列</option>
                    <option value="desc">降冪排列</option>
                  </select>
                </div>
                
                <button type="submit" class="btn btn-primary">送出</button>
              </form>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">ID</th>
          </tr>
        </thead>
        <tbody>
            <% for(let i of sales){ %>
            <tr>
                <td><%= i.name %></td>
                <td><%= i.age %></td>
                <td><%= i.id %></td>
            </tr>
          <% } %>
        </tbody>
      </table>





</div>

